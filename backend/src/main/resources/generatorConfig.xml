<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!--配置说明见:https://blog.csdn.net/lovoo/article/details/78359107  -->
<generatorConfiguration>
    <context id="simple" targetRuntime="MyBatis3" defaultModelType="flat">

        <!--禁止生成注释-->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/test"
                        userId="root"
                        password=""/>

        <javaModelGenerator targetPackage="com.acmclub.neuq.backend.mapper.base" targetProject="/src/main/java">
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="./mapper" targetProject="/src/main/resource">
            <property name="trimStrings" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.acmclub.neuq.backend.mapper.base"
                             targetProject="/src/main/java">
            <property name="trimStrings" value="true"/>
        </javaClientGenerator>

        <table schema="DB2ADMIN" tableName="ALLTYPES" domainObjectName="baseTableName">
            <generatedKey column="id" sqlStatement="Mysql"/>
            <!--            <columnOverride column="LONG_VARCHAR_FIELD" javaType="java.lang.String" jdbcType="VARCHAR" typeHandler=""/>-->
            <!--可以在columnOverride中加入typeHandler属性来绑定转换器进行特殊的转换-->
        </table>

    </context>
</generatorConfiguration>